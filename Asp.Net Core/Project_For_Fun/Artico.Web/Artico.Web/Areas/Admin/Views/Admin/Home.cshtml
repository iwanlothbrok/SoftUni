@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area
    </p>
    <p class="lead mt-1">
        You can also see <b>all articles</b> in the system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="User" asp-action="All"
       class="btn btn-primary btn-lg">All Articles</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Admin" asp-action="ADD"
       class="btn btn-primary btn-lg">Add Articles</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Admin" asp-action="Mine"
       class="btn btn-primary btn-lg">Mine Articles</a>
</div>