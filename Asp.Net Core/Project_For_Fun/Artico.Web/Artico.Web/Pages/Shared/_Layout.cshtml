@using Artico.Infrastrucutre.Data.Models
@inject SignInManager<ApplicationUser> SignInManager
@using static Artico.Web.Areas.Constants;


<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<!-- Google Font: Source Sans Pro -->
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
	<!-- Font Awesome Icons -->
	<link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css"/>
	<!-- Theme style -->
	<link rel="stylesheet" href="~/css/dropdown.css"/>
	<link rel="stylesheet" href="~/css/adminlte.min.css"/>

	<!-- Title-->
	<title>@ViewData["Title"] - Artico </title/>
	<!-- Toastr-->
	<link rel="stylesheet" href="~/js/toastr/toastr.min.css" />
	<!-- Favicon-->
	 <link rel="icon" type="image/x-icon" href="~/img/Book.png">
	 
	@await RenderSectionAsync("Head",false)
</head>
<body class="hold-transition sidebar-mini">
	<div class="wrapper">

		<!-- Navbar -->
		<nav class="main-header navbar navbar-expand navbar-white navbar-light">
			<!-- Left navbar links -->
				<ul class="navbar-nav">
					<li class="nav-item">
					<a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
				</li>
				<li class="nav-item">
					<a href="/" class="nav-link">Home</a>					
				</li>				
				<li>
				 <a class="nav-link" asp-area="" asp-controller="User" asp-action="All">All Articles<i class="nav-link"></i></a>
				</li>
				</ul>
			
			@if (User.IsInRole("Administrator"))
			{
				<div class="dropdown">
				  <button class="dropbtn">Admin</button>
				  <div class="dropdown-content">
						 <a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="Add">Add Article<i class="nav-link"></i></a>
						 <a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="Home">Admin Home<i class="nav-link"></i></a>
						@* <a class="nav-link" asp-area="" asp-controller="Book" asp-action="All">All Books<i class="nav-link"></i></a>
						 <a class="nav-link" asp-area="" asp-controller="Book" asp-action="Mine">My Books<i class="nav-link"></i></a>
						 <a class="nav-link" asp-area="" asp-controller="WantedBooks" asp-action="WantedBooks">Wanted Books<i class="nav-link"></i></a>*@
				  </div>
				</div>
			}
		
			<!-- Right navbar links -->
			<ul class="navbar-nav ml-auto">
				<!-- Notifications Dropdown Menu -->
				<li class="nav-item">
					<a class="nav-link" data-widget="fullscreen" href="#" role="button">
						<i class="fas fa-expand-arrows-alt"></i>
					</a>
				</li>
			</ul>
			                    <partial name="_LoginPartial" />
		</nav>
		<!-- /.navbar -->
		<!-- Main Sidebar Container -->
		<aside class="main-sidebar sidebar-dark-primary elevation-4">
			<!-- Brand Logo -->
			@*<a href="/" class="brand-link">
				<img src="~/img/Book.png" alt="Warehouse Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
				<span class="brand-text font-weight-light">Booking Expirience</span>
			</a>*@
			<!-- Sidebar -->
			<div class="sidebar">
				<partial name="_MainMenu"/> 
				<!-- /.sidebar-menu -->
			</div>
			<!-- /.sidebar -->
		</aside>

		<!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper">
			<!-- Content Header (Page header) -->
			<div class="content-header">
				<div class="container-fluid">
					<div class="row mb-2">
						<div class="col-sm-6">
							</div><!-- /.col -->
						<div class="col-sm-6">
							<ol class="breadcrumb float-sm-right">
								<li class="breadcrumb-item"><a href="#">Home</a></li>
								<li class="breadcrumb-item active">Starter Page</li>
							</ol>
						</div><!-- /.col -->
					</div><!-- /.row -->
				</div><!-- /.container-fluid -->
			</div>
			<!-- /.content-header -->
			<!-- Main content -->
			@if (TempData.ContainsKey(GlobalMessageKey))
				{
					 <div class="alert alert-success text-center" role="alert">
					 @TempData[GlobalMessageKey]
            </div>
				 }
			<div class="content ml-6">
				<div class="container-fluid">
					@RenderBody()

				</div>
				<!-- /.row -->
			</div><!-- /.container-fluid -->
		</div>
		<!-- /.content -->
	</div>
	<!-- /.content-wrapper -->
	<!-- Control Sidebar -->
	<aside class="control-sidebar control-sidebar-dark">
		<!-- Control sidebar content goes here -->
		<div class="p-3">
			<h5>Title</h5>
			<p>Sidebar content</p>
		</div>
	</aside>
	<!-- /.control-sidebar -->
	<!-- Main Footer -->
	<footer class="main-footer">
		<!-- To the right -->
		<div class="float-right d-none d-sm-inline">
			Anything you want
		</div>
		<!-- Default to the left -->
		<strong>Copyright &copy; 2014-@DateTime.Now.Year <a href="/">Artico 2022 </a>.</strong> All rights reserved.
	</footer>

	<!-- ./wrapper -->
	<!-- jQuery -->
	<script src="~/plugins/jquery/jquery.min.js"></script>
	<!-- Bootstrap 4 -->
	<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
	<!-- AdminLTE App -->
	<script src="~/js/adminlte.min.js"></script>
	<script src="~/plugins/toastr/toastr.min.js"></script>

	@await RenderSectionAsync("Scripts",false)
</body>
</html>