@using Artico.Core.Models
@model ArticleFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>

        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="New salaries for developer...">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Body"></label>
                <input asp-for="Body" class="form-control" placeholder="...">
                <span asp-validation-for="Body" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tags"></label>
                <input asp-for="Tags" class="form-control" placeholder="Developer">
                <span asp-validation-for="Tags" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job"></label>
                <input asp-for="Job" class="form-control" placeholder="Developer...">
                <span asp-validation-for="Job" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position"></label>
                <input asp-for="Position" class="form-control" placeholder="Junior...">
                <span asp-validation-for="Position" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order"></label>
                <input asp-for="Order" class="form-control" placeholder="">
                <span asp-validation-for="Order" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsVisibleUsers"></label>
                <input type="checkbox" asp-for="IsVisibleUsers" class="form-control">
                <span asp-validation-for="IsVisibleUsers" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsVisibleGuests"></label>
                <input type="checkbox" asp-for="IsVisibleGuests" class="form-control">
                <span asp-validation-for="IsVisibleGuests" class="small text-danger"></span>
            </div>

            <input class="btn btn-primary mt-3" type="submit" value="Save" />
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

